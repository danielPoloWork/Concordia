<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns = "http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation = "http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-table-assignee-0001" author="simoneCopetti">
        <comment>Create table Assignee</comment>

        <createTable tableName="Assignee">
            <column name="uuid" type="CHAR(36)">
                <constraints primaryKey="true" primaryKeyName="pkAssignee"/>
            </column>
            <column name="idTask" type="VARCHAR(24)">
                <constraints referencedTableName="Task" referencedColumnNames="id" foreignKeyName="fkAssigneeTask" nullable="false"/>
            </column>
            <column name="idMember" type="VARCHAR(24)">
                <constraints referencedTableName="Member" referencedColumnNames="id" foreignKeyName="fkAssigneeMember" nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="Assignee"/>
        </rollback>

    </changeSet>
</databaseChangeLog>