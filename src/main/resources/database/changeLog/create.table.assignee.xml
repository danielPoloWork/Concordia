<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns = "http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation = "http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- FOLLOWING: APPLICATION-SPECIFIC CHANGELOGS -->
    <changeSet id="create-table-assignee-0001" author="simoneCopetti">
        <comment>Create table Assignee</comment>

        <createTable tableName="Assignee">
            <column name="uuid" type="CHAR(36)">
                <constraints primaryKey="true" primaryKeyName="pkAssignee"/>
            </column>
            <column name="idTask" type="VARCHAR(24)">
                <constraints nullable="false"/>
            </column>
            <column name="idMember" type="VARCHAR(24)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="idTask"
                                 baseTableName="Assignee"
                                 constraintName="fkTaskId"
                                 referencedColumnNames="id"
                                 referencedTableName="Task"/>

        <addForeignKeyConstraint baseColumnNames="idMember"
                                 baseTableName="Assignee"
                                 constraintName="fkMemberId"
                                 referencedColumnNames="id"
                                 referencedTableName="Member"/>

        <rollback>
            <dropTable tableName="Assignee"/>
        </rollback>

    </changeSet>
</databaseChangeLog>